<ul class="mdl-grid treats">
  {{#each treats as |treat|}}
    <li class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--2dp treats__treat">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text treats__treat__name">{{treat.name}}</h2>
      </div>
      <div class="mdl-card__media">
        <img src="http://placepu.gs/500/20{{treat.id}}" />
      </div>
      <div class="mdl-card__supporting-text">
        <ul class="mdl-list">
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">local_hospital</i>
              <span class="treats__treat__health">
                Health: {{treat.health}}
              </span>
            </span>
          </li>
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">straighten</i>
              <span class="treats__treat__size">
                Size: {{treat.size}}
              </span>
            </span>
          </li>
        </ul>
      </div>
    </li>
  {{/each}}
</ul>
